<div>
  <img class="moon" src="/assets/img/moon-icons/waning-cresent.svg">
  <h2>Testimonials</h2>
  <div class="quotes">
    {{#each quotes as |quote index|}}
      <blockquote class="{{index}}">
        <p class="quote">&ldquo;{{quote.text}}&rdquo;</p>
        <footer>
          <cite>{{quote.person}}</cite>
          <p>{{quote.profession}}</p>
        </footer>
      </blockquote>
    {{/each}}
  </div>
</div>
<nav>
  <div class="arrow prev" onclick={{action 'prevQuote'}}>
    <img src="/assets/img/arrow-left.svg">
  </div>
  <div class="arrow next" onclick={{action 'nextQuote'}}>
    <img src="/assets/img/arrow-right.svg">
  </div>
</nav>
