[Unit]
Description=This service starts and stops the Ember Fastboot app server for moonmother.com.au

[Service]
WorkingDirectory=/var/www/moonmother.com.au
ExecStart=/home/deploy/.nvm/versions/node/v8.12.0/bin/node fastboot-server.js
Type=simple
User=deploy
Group=deploy
StandardOutput=file:/var/log/fastboot/moonmother.com.au.access.log
StandardError=file:/var/log/fastboot/moonmother.com.au.error.log

[Install]
WantedBy=multi-user.target
