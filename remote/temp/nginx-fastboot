upstream fastboot.moonmother.hannahsuttondesign.com {
  server 127.0.0.1:8000;
}

server {
  listen 80;
  listen [::]:80;
  server_name moonmother.hannahsuttondesign.com;
  return 301 https://moonmother.hannahsuttondesign.com$request_uri;
}

server {
  listen 443 ssl http2;
  listen [::]:443 ssl http2;

  server_name moonmother.hannahsuttondesign.com;

  index index.html;
  error_page 404 /404.html;
  error_page 500 502 503 504 /50x.html;

  client_max_body_size 10G;
  add_header Strict-Transport-Security "max-age=31536000";

  # Define proxy settings to FastBoot
  location @fastboot {
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_set_header X-NginX-Proxy true;

    proxy_pass http://fastboot.moonmother.hannahsuttondesign.com;
    proxy_redirect off;
  }

  # Try-files before proxying to FastBoot,
  # fallback to our defined 404 page,
  # if FastBoot returns a 404 error.
  location / {
    root /var/www/moonmother.hannahsuttondesign.com/dist;
    try_files $uri $uri/ @fastboot =404;
  }

  # Optional, add some aggressive caching headers for fingerprinted assets
  location ~* "^/assets/.*-([a-z0-9]{32})\.(?:css|js|gif|png|jpe?g)$" {
    root /var/www/moonmother.hannahsuttondesign.com/dist;
    expires max;
    add_header Cache-Control public;
    access_log off;
    try_files $uri =404;
  }

  ssl_certificate /etc/letsencrypt/live/moonmother.hannahsuttondesign.com/fullchain.pem; # managed by Certbot
  ssl_certificate_key /etc/letsencrypt/live/moonmother.hannahsuttondesign.com/privkey.pem; # managed by Certbot
}
